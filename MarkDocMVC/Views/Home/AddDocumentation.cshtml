@{
    ViewData["Title"] = "Add documentation";
}
@model DocumentationModel
<form asp-controller="Home" asp-action="AddDocumentation" method="post">
    New file name:<input type="text" asp-for="@Model.DocumentationFileName">
    <br>
    New content:<textarea id="inp_editor1" rows="30" style="width:100%" asp-for="@Model.DocumentContent">
        @Model.DocumentContent
    </textarea>
    <button class="btn btn-success" id="btnSave" type="submit">Save</button>
</form>
<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back</a>
